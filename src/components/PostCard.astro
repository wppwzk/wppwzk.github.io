---
import { formatDate } from '../lib/utils';
import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article class="group relative flex flex-col items-start p-6 h-full bg-white/50 dark:bg-zinc-900/50 backdrop-blur-sm rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm transition-all duration-300 hover:shadow-xl hover:shadow-indigo-500/10 hover:border-indigo-300 dark:hover:border-indigo-700 hover:-translate-y-1">
    <div class="absolute inset-0 rounded-2xl bg-gradient-to-tr from-indigo-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none dark:from-indigo-950/20"></div>
    
    <div class="relative z-10 w-full flex-grow">
        <div class="flex items-center gap-x-4 text-xs mb-4">
            <time datetime={post.data.pubDate.toISOString()} class="text-zinc-500 dark:text-zinc-400 font-mono">
                {formatDate(post.data.pubDate)}
            </time>
            <span class="relative z-10 rounded-md bg-zinc-100 px-2 py-1 font-mono text-xs font-medium text-zinc-600 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700 border border-zinc-200 dark:border-zinc-700">
                {post.data.category || 'Blog'}
            </span>
        </div>
        
        <h3 class="mt-3 text-xl font-bold font-heading leading-6 text-zinc-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
            <a href={`/my-blog/blog/${post.slug}/`}>
                <span class="absolute inset-0"></span>
                {post.data.title}
            </a>
        </h3>
        <p class="mt-3 text-sm leading-6 text-zinc-600 dark:text-zinc-400 line-clamp-3">
            {post.data.description}
        </p>
    </div>
    
    <div class="relative z-10 mt-6 flex items-center justify-between w-full pt-4 border-t border-zinc-100 dark:border-zinc-800/50">
         <div class="flex gap-2 flex-wrap">
            {post.data.tags.slice(0, 3).map((tag) => (
                <span class="text-xs font-mono text-indigo-500/80 dark:text-indigo-400/80">#{tag}</span>
            ))}
         </div>
         <div class="text-indigo-600 dark:text-indigo-400 opacity-0 group-hover:opacity-100 transition-opacity -translate-x-2 group-hover:translate-x-0 duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
         </div>
    </div>
</article>
