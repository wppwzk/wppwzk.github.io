---
import { Github } from 'lucide-astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="border-b border-zinc-200/50 dark:border-zinc-800/50 bg-white/80 dark:bg-zinc-950/80 backdrop-blur-xl sticky top-0 z-50 shadow-sm shadow-indigo-500/5 dark:shadow-indigo-500/10">
	<nav class="group flex items-center justify-between mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-4">
		<a href="/" class="flex items-center space-x-2 text-xl font-bold font-heading tracking-tight text-zinc-900 dark:text-white hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">
			<span>YBC</span>
			<span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-400 dark:to-purple-400">的博客</span>
		</a>
		<div class="flex items-center gap-6">
			<div class="hidden sm:flex gap-6 text-sm font-medium text-zinc-600 dark:text-zinc-400">
				<a href="/blog" class="relative group transition-colors">
                    文章
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-indigo-600 to-purple-600 group-hover:w-full transition-all duration-300"></span>
                </a>
                <a href="/tags" class="relative group transition-colors">
                    分类
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-indigo-600 to-purple-600 group-hover:w-full transition-all duration-300"></span>
                </a>
				<a href="/about" class="relative group transition-colors">
                    关于
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-indigo-600 to-purple-600 group-hover:w-full transition-all duration-300"></span>
                </a>
                <a href="/search" class="relative group transition-colors">
                    搜索
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-indigo-600 to-purple-600 group-hover:w-full transition-all duration-300"></span>
                </a>
			</div>
            <div class="flex items-center gap-4">
                 <a href="https://github.com/wppwzk" target="_blank" title="访问我的 GitHub" class="relative group p-2 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-900/50 transition-colors">
                    <span class="sr-only">GitHub</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github text-zinc-500 group-hover:text-indigo-600 dark:text-zinc-400 dark:group-hover:text-indigo-400 transition-colors">
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                        <path d="M9 18c-4.51 2-5-2-7-2"></path>
                    </svg>
                 </a>
                 <ThemeToggle />
            </div>
		</div>
	</nav>
</header>
