---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`标签: ${tag} | My Technical Blog`} description={`所有关于 ${tag} 的文章`}>
    <div class="py-12">
        <h1 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-white mb-2">Tag: <span class="text-indigo-600 dark:text-indigo-400">{tag}</span></h1>
        <p class="text-zinc-600 dark:text-zinc-400 mb-8">Found {posts.length} posts</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
                <PostCard post={post} />
            ))}
        </div>
    </div>
</Layout>
